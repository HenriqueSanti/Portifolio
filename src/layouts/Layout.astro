---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="Web experiences from design to code" />
		<link rel="icon" type="image/x-icon" href="https://res.cloudinary.com/dfj6st5pk/image/upload/v1663607955/Profile_ozanw8.ico" />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter&family=Sora:wght@600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	/* ------------------- */
/* Custom properties   */
/* ------------------- */

:root {
	/* colors */
	--clr-ash-gray: #c9cebc;
	--clr-dark-ash-gray: #3B3D38;
	--clr-alabaster: #EBEDDF;
	--clr-dark-alabaster: #696A61;
	--clr-floral-white: #F8F5ED;
	--clr-floral-dark:  #52504C;
	--clr-bone: #E4DED3;
	--clr-dark-bone: #363532;
	--clr-pink-lavander: #CFA5B4;
	--clr-dark-lavander: #2C2125;
	--clr-misty-pink: #FFE4E4;
	--clr-dark-misty-pink: #544949;
	--clr-unbleached-silk: #FFD1C4;
	--cle-dark-silk: #332A27;
	--clr-melon: #F4AD9B;
	--clr-dark-melon: #6B4D45;
	--clr-silver-pink: #BAACA6;
	--clr-dark-silver-pink: #23201E;
	--clr-beau-blue: #CCD6E2;
	-clr-dark-beau-blue: #2D2F32;
	
	/* font-sizes */
	--fs-900: 7.375rem;
	--fs-800: 5.25rem;
	--fs-700: 3.5rem;
	--fs-600: 3rem;
	--fs-500: 2rem;
	--fs-400: 1.125rem;
	--fs-300: 1rem;
	--fs-200: 0.875rem;
	
	/* font-families */
	/*--ff-serif: "Bellefair", serif;*/
	--ff-sans-title: "Sora", sans-serif;
	--ff-sans-text: "Inter", sans-serif;
}


/* ------------------- */
/* Reset               */
/* ------------------- */

/* https://piccalil.li/blog/a-modern-css-reset/ */

/* Box sizing */
*,
*::before,
*::after {
	box-sizing: border-box;
}

html {
	scroll-behavior: smooth;
	cursor: none;
}

/* Reset margins */
body,
h1,
h2,
h3,
h4,
h5,
p,
figure,
picture {
	margin: 0; 
}

h1,
h2,
h3 {
	font-family: var(--ff-sans-title);
	font-weight: 700;
	color: hsl( var(--clr-jet) );
}
h4,
h5,
h6,
span {
	font-family: var(--ff-sans-title);
	font-weight: 600;
	color: hsl( var(--clr-jet) );
}
p {
	font-family: var(--ff-sans-text);
	font-weight: 400;
}

/* set up the body */
body {
	font-size: var(--fs-400);
	color: hsl( var(--clr-floral-white) );
	background-color: hsl( var(--clr-jet) );
	background-size: cover;
	background-repeat: no-repeat;
	line-height: 1.5;
	min-height: 100vh;
}

/* make images easier to work with */
img,
picutre {
	max-width: 100%;
	display: block;
}

/* Lists ans links */
ul {
	list-style: none;
}
a {
	text-decoration: none;
	color: hsl( var(--clr-jet) );
	font-family: var(--ff-sans-title);
}

/* make form elements easier to work with */
input,
button,
textarea,
select {
	font: inherit;
}

/* remove animations for people who've turned them off */
@media (prefers-reduced-motion: reduce) {  
*,
*::before,
*::after {
	animation-duration: 0.01ms !important;
	animation-iteration-count: 1 !important;
	transition-duration: 0.01ms !important;
	scroll-behavior: auto !important;
}
}


/* ------------------- */
/* Utility classes     */
/* ------------------- */

/* general */

.flex {
	display: flex;
	gap: var(--gap, 1rem);
}

.grid {
	display: grid;
	gap: var(--gap, 1rem);
}

.flow > *:where(:not(:first-child)) {
	margin-top: var(--flow-space, 1rem);
}

.container {
	padding-inline: 1rem;
	margin-inline: auto;
	max-width: 80rem;
}

/* colors */

.bg-dark { background-color: hsl( var(--clr-dark) );}
.bg-accent { background-color: hsl( var(--clr-light) );}
.bg-white { background-color: hsl( var(--clr-white) );}

.text-dark { color: hsl( var(--clr-dark) );}
.text-accent { color: hsl( var(--clr-light) );}
.text-white { color: hsl( var(--clr-white) );}

/* typography */

.ff-serif { font-family: var(--ff-serif); } 
.ff-sans-title { font-family: var(--ff-sans-title); } 
.ff-sans-text { font-family: var(--ff-sans-normal); } 

.letter-spacing-1 { letter-spacing: 4.75px; } 
.letter-spacing-2 { letter-spacing: 2.7px; } 
.letter-spacing-3 { letter-spacing: 2.35px; } 

.uppercase { text-transform: uppercase; }

.fs-900 { font-size: var(--fs-900); }
.fs-800 { font-size: var(--fs-800); }
.fs-700 { font-size: var(--fs-700); }
.fs-600 { font-size: var(--fs-600); }
.fs-500 { font-size: var(--fs-500); }
.fs-400 { font-size: var(--fs-400); }
.fs-300 { font-size: var(--fs-300); }
.fs-200 { font-size: var(--fs-200); }

.fs-900,
.fs-800,
.fs-700,
.fs-600 {
	line-height: 1.1;
}

.numbered-title {
	font-family: var(--ff-sans-cond);
	font-size: var(--fs-500);
	text-transform: uppercase;
	letter-spacing: 4.72px; 
}

.numbered-title span {
	margin-right: .5em;
	font-weight: 700;
	color: hsl( var(--clr-white) / .25);
}


/* ------------------- */
/* Compontents         */
/* ------------------- */

/* cursor */
.innerCursor {
	position: fixed;
	left: -10%;
	width: 12px;
	height: 12px;
	transform: translate(-50%, -50%);
	background-color: hsl( var(--clr-floral-white) );
	mix-blend-mode: difference;
	border-radius: 50%;
	pointer-events: none;
	transition: width 0.5s, height 0.5s;
	z-index: 10000;
}

.innerCursor.grow {
	width: 35px;
	height: 35px;
	transition: width 0.5s, height 0.5s;
}

.outerCursor {
	position: fixed;
	left: -10%;
	width: 35px;
	height: 35px;
	transform: translate(-50%, -50%);
	border: 1px solid hsl( var(--clr-floral-white) );
	mix-blend-mode: difference;
	border-radius: 50%;
	pointer-events: none;
	transition: 0.1s;
	z-index: 10000;
}

/*button */
.button {
	display: grid;
	place-items: center;
	background-color: hsl( var(--clr-jet) );
	color: hsl( var(--clr-floral-white) );
	padding: 1rem 2em;
	text-decoration: none;
	font-family: var(--ff-sans-title);
	cursor: pointer;
	transition: .3s ease-in-out;
	border: none;
}

.button-bordered {
	display: grid;
	place-items: center;
	background-color: transparent ;
	color: hsl( var(--clr-davys-gray) );
	border: 2px solid hsl( var(--clr-davys-gray) );
	padding: 1rem 2em;
	text-decoration: none;
	font-family: var(--ff-sans-title);
	cursor: pointer;
	transition: .3s ease-in-out;
}


/* ======== Locomotive Scroll ======= */
/*! locomotive-scroll v4.1.3 | MIT License | https://github.com/locomotivemtl/locomotive-scroll */
html.has-scroll-smooth {
  overflow: hidden; }

html.has-scroll-dragging {
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none; }

.has-scroll-smooth body {
  overflow: hidden; }

.has-scroll-smooth [data-scroll-container] {
  min-height: 100vh; }

[data-scroll-direction="horizontal"] [data-scroll-container] {
  height: 100vh;
  display: inline-block;
  white-space: nowrap; }

[data-scroll-direction="horizontal"] [data-scroll-section] {
  display: inline-block;
  vertical-align: top;
  white-space: nowrap;
  height: 100%; }

.c-scrollbar {
  position: absolute;
  right: 0;
  top: 0;
  width: 11px;
  height: 100%;
  transform-origin: center right;
  transition: transform 0.3s, opacity 0.3s;
  opacity: 0; }
  .c-scrollbar:hover {
    transform: scaleX(1.45); }
  .c-scrollbar:hover, .has-scroll-scrolling .c-scrollbar, .has-scroll-dragging .c-scrollbar {
    opacity: 1; }
  [data-scroll-direction="horizontal"] .c-scrollbar {
    width: 100%;
    height: 10px;
    top: auto;
    bottom: 0;
    transform: scaleY(1); }
    [data-scroll-direction="horizontal"] .c-scrollbar:hover {
      transform: scaleY(1.3); }

.c-scrollbar_thumb {
  position: absolute;
  top: 0;
  right: 0;
  background-color: black;
  opacity: 0.5;
  width: 7px;
  border-radius: 10px;
  margin: 2px;
  cursor: -webkit-grab;
  cursor: grab; }
  .has-scroll-dragging .c-scrollbar_thumb {
    cursor: -webkit-grabbing;
    cursor: grabbing; }
  [data-scroll-direction="horizontal"] .c-scrollbar_thumb {
    right: auto;
    bottom: 0; }






</style>