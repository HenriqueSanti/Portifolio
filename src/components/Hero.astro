<style lang="scss">

    .hero {
        height: 100vh;
        width: 100%;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;

        .background-gradient {
            position: absolute;
            height: 100vh;
            width: 100vw;
            background: hsl(var(--clr-floral-white));       
        
            .main {
                height: 100%;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                margin: 0 auto ;


                h1 {
                    font-size: 2.4em;
                    text-align: center;
                    z-index: -100;
                }

                button {
                    border: none;
                    background: transparent;
                    .btn {
                        font-family: var(--ff-sans-title);
                        width: 100%;
                        padding: .8rem;
                        background-color: hsl(var(--clr-jet));
                        
                        display: flex;
                        justify-content: space-between;
                        border-radius: 3rem;
                        cursor: pointer;
                        transition: .3s ease-in-out;

                        video {
                            max-width: 4rem;
                            border-radius: 100%;
                        } 

                        span {
                            color: hsl(var(--clr-floral-white));
                            font-size: var(--fs-400);
                            display: flex;
                            justify-content: center;
                            align-items: center;
                            margin-inline: 1rem;
                        }
                    }
                }
                button:hover {
                    background: transparent;
                    .btn {
                        background-color: hsl(var(--clr-orange-soda));
                        color: hsl(var(--clr-jet));
                    }
                }
                
                .img {
                    img {
                        display: none;
                    }
                }
            }
        }
    }

    
    
    

    @media (min-width: '768px') {
        .hero {

            .background-gradient {
                position: absolute;
                height: 100vh;
                width: 100vw;
                background-image: linear-gradient(hsl(var(--clr-bone)), hsl(var(--clr-ash-gray)));
                background-size: cover;        
                
                .main {
                    width: 700px;
                    align-items: center;
                    cursor: pointer;
                    
                    h1 {
                        position: absolute;
                        width: 700px;
                        font-size: var(--fs-700);
                        mix-blend-mode: difference;
                    }

                    button {
                        display: none;
                    }

                    .img {
                        max-width: 300px;
                        img {
                            display: block;
                            max-width: 300px;
                            position: absolute;
                            top: 50%;
                            left: 50%;
                            transform: translate(-50%, -50%) rotate(12deg);
                            z-index: -110;
                        }
                        img.image {
                            height: 400px;
                        }
                        img.cover {
                            transition: .3s ease-in-out;
                        }
                    }
                }

                .main:hover {
                    .img {
                        img.cover {
                            max-width: 280px;
                            opacity: 0;
                        }
                    }
                }
            
            }
        }
    } 

    @media (min-width: '1440px') {
        .hero {
            .background-gradient {
                .main {
                    max-width: 900px;
                    
                    h1 {
                        width: 900px;
                        font-size: 4.2rem;
                    
                    }


                    .img {
                        max-width: 360px;
                        img {
                            max-width: 360px;
                        }
                        img.image {
                            display: block;
                            height: 460px;
                        }
                    }
                }
                .main:hover {
                    .img {
                        img.cover {
                            max-width: 340px;
                        }
                    }
                }
            }
        }
    }

    @media (min-width: '1860px') {
        .hero {
            .background-gradient {
                .main {
                    max-width: 1200px;
                    
                    h1 {
                        width: 1200px;
                        font-size: var(--fs-800);
                    
                    }


                    .img {
                        max-width: 420px;

                        img {
                            max-width: 420px;
                        }
                        img.image {
                            display: block;
                            height: 560px;
                        }
                    }
                }
                .main:hover {
                    .img {
                        img.cover {
                            max-width: 400px;
                        }
                    }
                }
            }
        }
    }

</style>

