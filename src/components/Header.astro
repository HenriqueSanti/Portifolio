<style lang="scss">
    .header {
        width: 100%;
        z-index: 120;
        background-color: var(--clr-melon);
        transition: .5s ease-in-out;
        position: fixed;
        box-shadow: 0 20px 2px var(clr-dark-bone);

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            padding: .4rem .8rem;
            margin-inline: auto;
            max-width: 1920px;
            z-index: 100;

            .nav-logo {
                z-index: 150;
                display: flex;
                justify-content: center;
                align-items: center;
                img {
                    width: 40px;
                    margin: auto;
                    padding: 0%;
                    z-index: 130;
                    margin-right: 1rem;
                }

                p {
                    font-weight: bold;
                    color: hsl(var(--clr-davys-gray));
                    font-family: var(--ff-sans-title);
                }
            }

            .nav-menu {
                position: fixed;
                top: -100%;
                left: 0;
                background-color: transparent;
                width: 100%;
                height: 100%;
                margin: 0;
                padding: 0;
                display: flex;
                justify-content: center;
                align-items: center;
                background-color: hsl(var(--clr-floral-white));
                z-index: -1;
                transition: all .3s ease-in-out;

                .nav {
                    .nav-item {
                        margin: 1.8rem 0;
                        .nav-link {
                            font-size: var(--fs-600);
                        }
                    }
                }

                .social-links {
                    display: none;
                }
            }

            .nav-menu.active {
                top: 0;
                
                z-index: 100;
            }

            .hamburger {
                cursor: pointer;
                z-index: 110;

                .bar {
                    display: block;
                    width: 1.8rem;
                    height: .25rem;
                    margin: 5px auto;
                    transition: all .3s ease-in-out;
                    background-color: hsl(var(--clr-davys-gray));
                    
                }
            }

            .hamburger.active .bar:nth-child(1) {
                transform: translateY(4.4px) rotate(45deg);
            }

            .hamburger.active .bar:nth-child(2) {
                transform: translateY(-4.4px) rotate(-45deg);
            }
        }
    }
    
@media only screen and (min-width: '768px') {
    .header {

        .navbar {
            .nav-menu {
                .nav {
                    margin-right: 6rem;
                    padding-right: 6rem;
                    border-right: 2px solid hsl(var(--clr-jet));
                    .nav-item {
                        .nav-link {
                            font-size: var(--fs-500);
                        }
                    }
                }

                .social-links {
                    display: block;
                    h2 {
                        font-size: var(--fs-500);
                        color: hsl(var(--clr-orange-soda));
                    }
                    li {
                        display: flex;
                        flex-direction: column;

                        a {
                            display: flex;
                            gap: 1rem;
                            align-items: center;
                            padding: .2rem;
                            box-sizing: border-box;

                            img {
                                width: 2.2rem;
                            }
                        }
                    }
                }
            }
        }
    }
}

@media only screen and (min-width: '1024px') {
    .header {
